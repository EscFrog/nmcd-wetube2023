doctype html
html(lang="ko")
    head
        title #{pageTitle} | Wetube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body
        header
            if sampleUser.loggedIn
                small Hello #{sampleUser.username}
            nav
                ul
                    if sampleUser.loggedIn
                        li
                            a(href="/logout") Log Out
                    else
                        li
                            a(href="/login") Log in
            h1=pageTitle
        main
            block content
    include partials/footer